<%- include("header.ejs") %>

<main class="my-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img src=<%= content.strDrinkThumb %> alt="" class="img-fluid drink_thumb">
            </div>
            <div class="col-md-6">
                <h1 class="mt-3"><%= content.strDrink %></h1>
                <p class="mt-4"><%= content.strInstructions %></p>
                <ul>
                    <% ingredients.forEach((element) => { %>
                        <li><%= element %></li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>

    <div class="container mt-5">
        <div class="row">
            <% ingredientsList.forEach((element) => { %>
                <div class="col-md-3">

                    <div class="card mt-3" style="width: 18rem;">
                        <img src="https://www.thecocktaildb.com/images/ingredients/<%= element %>.png" class="card-img-top" alt="...">
                        <div class="card-body">
                          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        </div>
                    </div>
                </div>
            <% }) %>
            
        </div>
    </div>
</main>
